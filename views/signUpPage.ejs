<!DOCTYPE html>
<html lang="en">
<!-- The link below helped me manage pages with css
  Source: https://stackoverflow.com/questions/29788182/how-do-i-link-all-pages-to-the-same-css-external-file -->

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" type="text/css" href="/signUpPage.css" />
  <title>SongsLib App</title>
</head>

<body>
  <Div class="image signUpContainer">
    <div class="darkGrey"></div>

    <div class="lightGrey">
      <i class="bi bi-person-circle"></i>

      <form class="form container" action="/signUp" method="POST">
        <div class="inputParent">
          <div class="bodyContainer">
            <h1>Please Sign Up</h1>

            <div class="fullName row">
              <!-- First name field -->

              <label class="label" for="name">First Name:</label>
              <input class="someInputs input font" type="text" name="firstName" placeholder="First Name" />
              <div class="questionMark">
                <i class="question fa-solid fa-circle-question" onclick="firstNameHint()"></i>
              </div>

              <!-- Middle name field -->

              <label class="label" for="name">Middle Name:</label>
              <input class="someInputs input font" type="text" name="middleName" placeholder="Middle Name" />

              <!-- Last name field -->

              <label class="label" for="name">Last Name:</label>
              <input class="someInputs input font" type="text" name="lastName" placeholder="Last Name" />

              <div class="questionMark">
                <i class="question fa-solid fa-circle-question" onclick="lastNameHint()"></i>
              </div>

              <!-- E-mail field -->

              <label class="label" for="name">E-mail:</label>
              <input class="someInputs input font" type="text" name="email" placeholder="E-mail" />

              <div class="questionMark">
                <i class="question fa-solid fa-circle-question" onclick="emailHint()"></i>
              </div>

              <!-- Password field -->

              <label class="label" for="name">Password:</label>
              <input class="input font" type="password" name="password" placeholder="Password" />

              <div class="questionMark">
                <i class="question fa-solid fa-circle-question" onclick="passwordHint()"></i>
              </div>

              <div id="error"><%=message%></div>
              <div id="hint"></div>
            </div>
          </div>




          <!-- Script for DOM -->


          <script>
            // DOM for the first name

            function firstNameHint() {
              document.querySelector("#hint").innerHTML = `The first name's length must be greater than 1.`;

              // Display the first name hint for 4 seconds, then hide it
              document.querySelector("#hint").style.visibility = "visible";
              setTimeout(hideFirstNameHint, 4000)
            }

            // set the first name to invisible
            function hideFirstNameHint() {
              document.querySelector("#hint").style.visibility = "hidden";
            }



            // DOM for last name

            function lastNameHint() {
              document.querySelector("#hint").innerHTML = `The last name's length must be greater than 1.`;

              // Display the last name hint for 4 seconds, then hide it
              document.querySelector("#hint").style.visibility = "visible";
              setTimeout(hideFirstNameHint, 4000)
            }

            // set the last name to invisible
            function hideLastNameHint() {
              document.querySelector("#hint").style.visibility = "hidden";
            }




            // DOM for e-mail

            function emailHint() {
              document.querySelector("#hint").innerHTML = `The e-mail must be valid, and the length must be greater than 6.`;

              // Display the e-mail hint for 4 seconds, then hide it
              document.querySelector("#hint").style.visibility = "visible";
              setTimeout(hideEmailHint, 4000)
            }

            // set the e-mail to invisible
            function hideEmailHint() {
              document.querySelector("#hint").style.visibility = "hidden";
            }




            // DOM for password

            function passwordHint() {
              document.querySelector("#hint").innerHTML = `The password's length must be greater than 6.`;

              // Display the password hint for 4 seconds, then hide it
              document.querySelector("#hint").style.visibility = "visible";
              setTimeout(hidePasswordHint, 4000)
            }

            // set password to invisible

            function hidePasswordHint() {
              document.querySelector("#hint").style.visibility = "hidden";
            }


          </script>

          <div class="submitAndCancelButtons">
            <input class="btn btn-primary btn-lg button font submit" value="Sign up" type="submit" />
            <a class="btn btn-secondary btn-lg button font cancel" href="/homePage">Cancel</a>
          </div>
        </div>
      </form>
    </div>
  </Div>
</body>

</html>